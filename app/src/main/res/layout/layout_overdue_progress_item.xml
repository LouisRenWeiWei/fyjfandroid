<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/loan_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.5dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="7月"
            android:textColor="#666666"
            android:textSize="12.5sp" />

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/month"
            android:background="@drawable/oval_bg" />

        <View
            android:layout_width="1px"
            android:layout_height="103dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="46dp"
            android:layout_toRightOf="@+id/month"
            android:background="#c8c8c8" />

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_height="130dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="#f6f6f6"
            android:layout_toRightOf="@+id/iv_dot">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/month_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="2017年7月份贷后检查"
                    android:paddingRight="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_toLeftOf="@+id/month_count"/>

                <TextView
                    android:id="@+id/month_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/pinglun_msg"
                    android:drawablePadding="10dp"
                    android:text="7"
                    android:textSize="12.5sp" />

            </RelativeLayout>

            <View
                android:layout_width="280dp"
                android:layout_height="1px"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:background="#c8c8c8" />

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="86.5dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:background="#e3e2e2"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="86.5dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/image_1"
                android:background="#e3e2e2"
                android:scaleType="fitXY"/>

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="86.5dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_toRightOf="@id/image_2"
                android:background="#e3e2e2"
                android:scaleType="fitXY"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/iv_dot"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/image"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="我确定潍坊威风为飞任务我服务服务  为 任务任务"
            android:textColor="#000"
            android:textSize="12sp" />

    </RelativeLayout>


</RelativeLayout>