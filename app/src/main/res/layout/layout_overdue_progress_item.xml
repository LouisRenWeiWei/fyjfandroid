<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loan_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/month"
        android:layout_width="18dp"
        android:layout_height="11.5dp"
        android:layout_marginLeft="10.5dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="7月"
        android:textColor="#666666"
        android:textSize="12.5sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/month"
            android:background="@drawable/oval_bg" />

        <View
            android:layout_width="1px"
            android:layout_height="103dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="46dp"
            android:layout_toRightOf="@+id/month"
            android:background="#c8c8c8" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/iv_dot"
        android:background="#f6f6f6">

        <TextView
            android:id="@+id/month_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="5dp"
            android:text="2017年7月份贷后检查"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_toLeftOf="@+id/month_count"/>

        <TextView
            android:id="@+id/month_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/pinglun_msg"
            android:drawablePadding="10dp"
            android:text="7"
            android:textSize="12.5sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/month_title"
            android:background="#c8c8c8" />
