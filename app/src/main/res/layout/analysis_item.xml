<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/month"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.5dp"
        android:gravity="center"
        android:text="2017å¹´"
        android:textColor="#666666"
        android:textSize="12.5sp"/>

    <ImageView
        android:id="@+id/iv_divider_1"
        android:layout_width="7dp"
        android:layout_height="match_parent"
        android:background="@mipmap/im_divider"/>


    <View
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:background="#c8c8c8"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"/>



    <RelativeLayout
        android:id="@+id/analysis_item"
        android:layout_width="270dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="#f6f6f6"
        >

        <TextView
            android:id="@+id/analysis_title"
            android:layout_width="195dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="23122312"
            android:textColor="#000000"
            android:textSize="15sp"/>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="23dp"
            android:background="#c8c8c8"/>

        <TextView
            android:id="@+id/analysis_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/pinglun_msg"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="34"
            android:textColor="#666666"
            android:textSize="12.5dp"
            />

    </RelativeLayout>

</LinearLayout>