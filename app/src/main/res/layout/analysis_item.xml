<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/month"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9.5dp"
        android:layout_marginTop="45dp"
        android:text="2017年2月"
        android:gravity="center"
        android:textColor="#666666"
        android:textSize="12.5sp"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/iv_divider_1"
        android:layout_width="14dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@+id/month"/>

    <RelativeLayout
        android:id="@+id/analysis_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/iv_divider_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#f6f6f6">

        <TextView
            android:id="@+id/tv_bank_name"
            android:layout_width="80dp"
            android:paddingLeft="5dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="招333333333"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/analysis_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tv_bank_name"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:ellipsize="end"
            android:text="231223333333333333333333333333333333333333312"
            android:textColor="#000000"
            android:maxLines="2"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="23dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="23dp"
            android:background="#c8c8c8"
            android:visibility="gone" />

        <TextView
            android:id="@+id/analysis_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:drawableLeft="@mipmap/pinglun_msg"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="34"
            android:textColor="#666666"
            android:textSize="12.5dp"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>