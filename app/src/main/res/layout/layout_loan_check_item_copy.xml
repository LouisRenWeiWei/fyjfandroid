<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loan_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <View
            android:id="@+id/v_top_line"
            android:layout_width="2px"
            android:layout_height="10dp"
            android:layout_toRightOf="@+id/month"
            android:background="@color/color_a3" />

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/oval_bg" />


        <View
            android:layout_width="2px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_a3" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/customer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="34343333" />

        <RelativeLayout
            android:id="@+id/rl_top_infos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_date"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/customer_msg"
                android:maxLines="2"
                android:text="2017年7月份贷后检查"
                android:textColor="#010101"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/month_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawableRight="@mipmap/jiantou_right"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:text="3434"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:textSize="12.5sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_imgs"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@+id/rl_top_infos"
            android:background="#ffffff"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#e3e2e2"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#e3e2e2"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#e3e2e2"
                android:scaleType="fitXY" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>