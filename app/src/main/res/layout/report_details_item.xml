<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/customer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <TextView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginTop="12.5dp"
            android:background="#ff1c1c"
            android:gravity="center"
            android:text="预警"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginTop="12.5dp"
            android:gravity="center"
            android:textColor="#010101"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/customer_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="13dp"
            android:drawableLeft="@mipmap/pinglun_msg"
            android:drawablePadding="10.5dp"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="12.5sp" />

        <ImageView
            android:id="@+id/customer_img_1"
            android:layout_width="108dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:background="#e3e2e2" />

        <ImageView
            android:id="@+id/customer_img_2"
            android:layout_width="108dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="#e3e2e2" />

        <ImageView
            android:id="@+id/customer_img_3"
            android:layout_width="108dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="45dp"
            android:background="#e3e2e2" />

        <TextView
            android:id="@+id/customer_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.5dp"
            android:layout_marginTop="135.5dp"
            android:gravity="center"
            android:textColor="#254382"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/customer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="136.5dp"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="165dp"
            android:background="#c8c8c8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="165dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_report"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/report_icon"
                android:gravity="center"
                android:paddingLeft="23.5dp"
                android:paddingRight="23.5dp"
                android:text="检查报告"
                android:textColor="#666666"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="12.5dp"
                android:layout_marginTop="12.5dp"
                android:background="#c8c8c8" />

            <TextView
                android:id="@+id/customer_quantified"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/quantified_icon"
                android:gravity="center"
                android:paddingLeft="23.5dp"
                android:paddingRight="23.5dp"
                android:text="量化分析"
                android:textColor="#666666"
                android:textSize="14sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="12.5dp"
                android:layout_marginTop="12.5dp"
                android:background="#c8c8c8" />

            <TextView
                android:id="@+id/customer_credit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/credit_icon"
                android:gravity="center"
                android:paddingLeft="23.5dp"
                android:paddingRight="23.5dp"
                android:text="信征报告"
                android:textColor="#666666"
                android:textSize="14sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>