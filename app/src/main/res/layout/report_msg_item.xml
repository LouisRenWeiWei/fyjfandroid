<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/msg_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/msg_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="23dp"
            android:textColor="#666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15.5dp"
            android:layout_marginTop="22.5dp"
            android:textColor="#b2b2b2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/msg_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23.5dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginRight="15.dp"
            android:layout_marginTop="50.5dp"
            android:textColor="#010101"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/ll_replies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/msg_context"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/app_bg">

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/ll_replies"
            android:background="#c8c8c8" />

    </RelativeLayout>

</RelativeLayout>