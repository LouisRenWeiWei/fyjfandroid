<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/app_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/app_color">

            <TextView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:drawableLeft="@mipmap/back"
                android:text="贷后检查"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/back"
                android:layout_height="28dp"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/search_bg"
                android:drawableLeft="@mipmap/search"
                android:maxLines="1"
                android:maxLength="10"
                android:hint="客户名称"
                android:textSize="15sp"
                android:textCursorDrawable="@drawable/cursor"
                android:textColorHint="@color/app_bg"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionSearch"
                />

        </RelativeLayout>

    </RelativeLayout>

    <com.fyjf.widget.refreshview.XRefreshView
        android:id="@+id/xRefreshView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff"
        android:orientation="vertical">

        <com.fyjf.widget.refreshview.XScrollView
            android:id="@+id/xScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:background="@color/app_bg"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewLatest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
                <LinearLayout
                    android:id="@+id/ll_load_more_latest"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <View
                        android:id="@+id/v_top_line"
                        android:layout_width="2px"
                        android:layout_height="match_parent"
                        android:background="@color/color_a3"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="8dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="加载更多"
                        android:textColor="@color/colorAccent" />
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </com.fyjf.widget.refreshview.XScrollView>
    </com.fyjf.widget.refreshview.XRefreshView>

</LinearLayout>
