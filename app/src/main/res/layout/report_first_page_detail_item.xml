<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <View
            android:id="@+id/v_top_line"
            android:layout_width="2px"
            android:layout_height="10dp"
            android:layout_toRightOf="@+id/month"
            android:background="@color/color_a3" />

        <ImageView
            android:id="@+id/iv_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/oval_bg" />


        <View
            android:layout_width="2px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_a3" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/customer_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="34343333" />

        <com.fyjf.all.widget.badgeview.BGABadgeRelativeLayout
            android:id="@+id/rl_top_infos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/tv_date"
            android:background="#ffffff"
            android:gravity="center_vertical"
            app:badge_bgColor="@color/red"
            app:badge_gravity="rightTop"
            app:badge_horizontalMargin="3dp"
            app:badge_padding="4dp"
            app:badge_textColor="@color/white"
            app:badge_textSize="9sp"
            app:badge_verticalMargin="3dp">

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#ff1c1c"
                android:text="预警"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/customer_msg"
                android:layout_toRightOf="@+id/tv_state"
                android:maxLines="2"
                android:text="333333"
                android:textColor="#010101"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/customer_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:drawableLeft="@mipmap/pinglun_msg"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:textColor="#666666"
                android:textSize="12.5sp" />
        </com.fyjf.all.widget.badgeview.BGABadgeRelativeLayout>

        <LinearLayout
            android:id="@+id/ll_imgs"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_below="@+id/rl_top_infos"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/customer_img_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#e3e2e2"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/customer_img_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#e3e2e2"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/customer_img_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="#e3e2e2"
                android:scaleType="fitXY" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_infos"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/ll_imgs"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/customer_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="3434343"
                android:textColor="#254382"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/customer_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/customer_time"
                android:gravity="center"
                android:text="3434343"
                android:textColor="#254382"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/customer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="3434343"
                android:textColor="#666666"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rl_infos"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <LinearLayout
                android:id="@+id/ll_report"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/report_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="检查报告"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>


            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#c8c8c8" />

            <LinearLayout
                android:id="@+id/ll_analysic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/quantified_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="量化分析"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#c8c8c8" />


            <LinearLayout
                android:id="@+id/ll_credit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/credit_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="征信报告"
                    android:textColor="#666666"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>